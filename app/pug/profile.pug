form(action='/changes', method='get')
  p Change Your login:
    input(
      value= login
      name= 'login'
    )
  p Change Your password:
    input(
      value= password
      name='password'
    )
  p Change Your country: now You are #{country}
    select(name = 'country')
      option(value="rus") rus
      option(value="en") en
      option(value="fr") fr
    input(
      type='submit'
      value= 'next'
    )
